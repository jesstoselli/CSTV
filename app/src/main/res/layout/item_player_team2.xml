<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="174dp"
        android:layout_height="54dp"
        android:background="@drawable/bg_player_team2"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:textSize="@dimen/font_14"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_player_name"
        app:layout_constraintStart_toEndOf="@id/iv_player_picture"
        tools:text="Nickname" />

    <TextView
        android:id="@+id/tv_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:textColor="@color/grey"
        android:textSize="@dimen/font_12"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_player_picture"
        app:layout_constraintStart_toEndOf="@id/iv_player_picture"
        tools:text="Nome Jogador" />

    <ImageView
        android:id="@+id/iv_player_picture"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginBottom="@dimen/margin_8"
        android:contentDescription="@string/content_description_player"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/bg_player_placeholder" />

</androidx.constraintlayout.widget.ConstraintLayout>
